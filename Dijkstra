    column = int(raw_input())
    dic = dict()
    dic2 = dict()
    
    for i in range(column):
        dic[i]={}
        for j in range(column):
            if i == j :
                dic[i][j] = 0
                continue
            if j == 0 :
                print "Input the",(i),"value - to source node :",
                #dic[i][j] = float(raw_input())
