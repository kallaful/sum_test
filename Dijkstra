            else:
                print "Input the",(i),"value - to",(j),"th node :",
                dic[i][j] = float(raw_input())
                if dic[i][j] == 0:
                    dic[i][j] = float('inf')
                continue                    
        #j for is completed
        if i == 0:
            print " Your source node value is ",(dic[i])
        #elif i == column-1:
        #    print " Your destination node value is ",(dic[i])
        #    continue
        elif i == 1:
