        elif i == 3:
            print " Your 3 rd node value is ",(dic[i])
        else:
            print " Your",(i),"th node value is ",(dic[i])        
    #i for is completed
    print ""
    print "Your input"
    for k in range(column):
        print k,"-",dic[k]
    print ""
    dijkstra(dic,0,column-1)
    
