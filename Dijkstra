            elif j == 2 :
                print "Input the",(i),"value - to 2 nd node :",
                dic[i][j] = float(raw_input())
                try:
                    if dic[i][j] == 0:
                        dic[i][j] = float('inf')
                except KeyError:
                    print "why not?"
                #print "dic",(i),(j)," is ",dic[i][j]
                continue                
            elif j == 3 :
                print "Input the",(i),"value - to 3 rd node :",
                dic[i][j] = float(raw_input())
