                #    dic[i][j] = float('inf')
                inp_value(i,j)
                #print "dic",(i),(j)," is ",dic[i][j]
                continue
            elif j == column-1:
                print "Input the",(i),"value - to destination node :",
                dic[i][j] = float(raw_input())
                if dic[i][j] == 0:
                    dic[i][j] = float('inf')
